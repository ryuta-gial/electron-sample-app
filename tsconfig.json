{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ES2020"],
        "jsx": "react",
        "strict": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "src",
    },
    "ts-node": {
        "compilerOptions": {
            "target": "ES2015",
            "module": "CommonJS"
        }
    },
    "include": ["src"]
}
